{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:best-practices",
    ":label(dependencies)",
    ":timezone(Europe/Berlin)",
    ":disableRateLimiting",
    ":separateMultipleMajorReleases"
  ],

  "enabledManagers": ["custom.regex"],

  "packageRules": [
    {
      "matchDatasources": ["custom.activemq"],
      "extractVersion": "^(?<version>.+)/$"
    },
    {
      "matchDatasources": ["custom.activemq2"],
      "extractVersion": "^(?<version>.+)/$"
    }
  ],

  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["hiera.yaml"],
      "matchStrings": [
        "profile::activemq::install::version: \"(?<currentValue>.+?)\""
      ],
      "depNameTemplate": "apache/activemq-artemis",
      "datasourceTemplate": "custom.activemq2"
    }
  ],

  "customDatasources": {
    "activemq": {
      "defaultRegistryUrlTemplate": "https://archive.apache.org/dist/activemq/activemq-artemis/",
      "format": "html"
    },
    "activemq2": {
      "defaultRegistryUrlTemplate": "https://downloads.apache.org/activemq/activemq-artemis/",
      "format": "html"
    }
  }
}
